<script language='javascript'>
function fsuma(){
  n1=document.f1.num1.value;
  n2=document.f1.num2.value;
  res=document.f1.resul.value;
  res=parseInt(n1)+parseInt(n2);
  document.f1.resul.value=res;
}</script>

<form name='f1' action="/suma" method="post">
  <label for="txtNumero1">Entero 1:</label>
  <input type="numero1" id="txtNumero1" name="num1"
    value="{{txtNumero1}}" placeholder="entero 1"
    />
  <label for="txtNumero2">Entero 2:</label>
  <input type="numero2" id="txtNumero2" name="num2"
    value="{{txtNumero2}}" placeholder="entero 2"
    />
    <input type=button value="   +   " onclick="fsuma()">
    <input type=text name='resul'/>
    </form>

  <div>
    <ul>
      {{#each msg}}
